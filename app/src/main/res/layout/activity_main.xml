<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search"
        android:layout_marginBottom="52dp"
        android:hint="CHAT APP"
        android:textSize="30dp" />

    <Button
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="309dp"
        android:layout_marginTop="71dp"
        android:text="Connect" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/connect"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/msgTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="73dp"
        android:hint="MESSAGES:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="123dp"
        android:hint="Message"
        android:textColor="?android:attr/textColorLink"
        android:textSize="30sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/writespace"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/connect"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-280dp"
        android:layout_marginBottom="41dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/search"
        android:layout_alignBottom="@+id/search"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="339dp"
        android:layout_marginBottom="14dp"
        android:text="Status"
        android:textSize="14sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/writespace"
        android:layout_alignEnd="@+id/status"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-306dp"
        android:text="Send" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listview"
        android:layout_centerHorizontal="true"
        android:text="Search" />



</RelativeLayout>